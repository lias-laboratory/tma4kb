<assembly>
	<id>dist</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/samples/</directory>
			<outputDirectory>samples</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${project.basedir}/target/${artifactId}-${version}-jar-with-dependencies.${packaging}
			</source>
			<destName>${artifactId}.${packaging}</destName>
		</file>
		<file>
			<source>${project.basedir}/src/main/license/lgpl.txt</source>
		</file>
	</files>
</assembly>
